{% extends 'base.html' %}
{% load static sekizai_tags %}
{% block title %}
   {{page_title}}
{% endblock %}
{% block head %}
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">

    {# Include Bootstrap 4 and jQuery #}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/static/tinymce/tinymce.min.js"></script>
{% endblock %}
{% block content %}
<h2 class="inventory-title">{{view_title}}</h2>
<p>{{ instructions | safe }}</p>
<form action="" method="post" enctype="multipart/form-data">
<div class="row">
  <div class="col-12">
    {% include "reference_manager/form_table.tmpl" %}
  </div></div>
<div class="row">
  <div class="col-12 text-right">
    <input type="submit" name="finish" value="Finish" class="btn lakshmi-btn-primary" >
    <a href="{{cancel_url}}" class="btn lakshmi-btn-light" >Cancel</a>
  </div>
</div>
</form>
{% addtoblock "js" %}
<script type="text/javascript" src="{% static 'admin/js/vendor/jquery/jquery.js' %}"></script>

{{ form.media }}

<script>
(function($) {
    $('#add-form').click(function() {
        var index = $('#id_inline_test_models-TOTAL_FORMS').val()
        var newTable = $('#id_inline_test_models-__prefix__-DELETE').parents('table').clone()
        newTable.find(':input').each(function() {
            for (attr of ['name', 'id'])
                $(this).attr(
                    attr,
                    $(this).attr(attr).replace('__prefix__', index)
                )
        })
        newTable.insertBefore($(this))
        $('#id_inline_test_models-TOTAL_FORMS').val(
            parseInt($('#id_inline_test_models-TOTAL_FORMS').val()) + 1
        )
        newTable.slideDown()
    })
})($)
</script>
{% endaddtoblock %}
{% endblock %}
